<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/studentIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:civ_border_width="4dp"
        android:src="@drawable/image_placeholder"
        app:civ_border_color="@color/black"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/studentIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ad_student_information"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/etStudentID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/id_number"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
           android:autofillHints="username" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/last_name"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:autofillHints="lastName"
            android:inputType="text"/>

        <EditText
            android:id="@+id/etGivenName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/given_name"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:autofillHints="givenName"
            android:inputType="text" />

        <EditText
            android:id="@+id/etMiddleName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/middle_name"
            android:padding="10dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:autofillHints="middleName"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <Spinner
                android:id="@+id/spinnerCourse"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:entries="@array/courses"
                android:padding="10dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/edit_text_background" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>

            <Spinner
                android:id="@+id/spinnerYear"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:entries="@array/year_level"
                android:padding="10dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edit_text_background"/>

        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/semester"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radioGroupSemester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbFirstSem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1st_sem"/>

                <RadioButton
                    android:id="@+id/rbSecondSem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_2nd_sem"/>

                <RadioButton
                    android:id="@+id/rbSummer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/summer"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:backgroundTint="@color/button"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>